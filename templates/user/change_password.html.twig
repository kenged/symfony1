{% extends 'base.html.twig' %}

{% block body_id 'user_password' %}

{% block main %}
    <h1>{{ 'Modification mot de passe'|trans }}</h1>

    <div class="alert alert-info" role="alert">{{ 'Vous devez reconnecter aprés avoir modifié votre mots de passe' }}</div>

    {{ form_start(form) }}
        {{ form_widget(form) }}

        <button type="submit" class="btn btn-primary">
            <i class="fa fa-save" aria-hidden="true"></i> {{ 'Sauvegarder'|trans }}
        </button>
    {{ form_end(form) }}
{% endblock %}

{% block sidebar %}
    <div class="section">
        <a href="{{ path('user_edit') }}" class="btn btn-lg btn-block btn-danger">
            <i class="fa fa-edit" aria-hidden="true"></i> {{ 'Modifier compte'|trans }}
        </a>
    </div>

   
{% endblock %}
