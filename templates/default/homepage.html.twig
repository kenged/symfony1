{% extends 'base.html.twig' %}

{% block body_id 'homepage' %}

{#
    the homepage is a special page which displays neither a header nor a footer.
    this is done with the 'trick' of defining empty Twig blocks without any content
#}
{% block header %}{% endblock %}
{% block footer %}{% endblock %}

{% block body %}
  <img class="logo1" src="https://scontent.fcdg2-1.fna.fbcdn.net/v/t1.0-9/106393747_117891206642157_5021413331426645543_o.png?_nc_cat=110&ccb=1-3&_nc_sid=09cbfe&_nc_ohc=o-qHQcNFJ4kAX96t-ZY&_nc_ht=scontent.fcdg2-1.fna&oh=0d291212c44bd6a36cd89d2cdcc623f6&oe=607B6F49"  alt="logo">
    <div class="page-header">
        <h1>{{ '<b>Cook With Me</b> vous souhaite la bienvenue'  }}</h1>
    </div>

    <div class="row">
        <div class="col-sm-6">
            <div class="jumbotron">
                <p>
                    {{ 'On apprends ensemble' }}
                </p>
                <p>
                    <a class="btn btn-primary btn-lg" href="{{ path('blog_index') }}">
                        <i class="fa fa-users" aria-hidden="true"></i> {{ 'Accueil'|trans }}
                    </a>
                </p>
            </div>
        </div>

        <div class="col-sm-6">
            <div class="jumbotron">
                <p>
                    {{ 'Connectez-Vous' }}
                </p>
                <p>
                    <a class="btn btn-primary btn-lg" href="{{ path('admin_index') }}">
                        <i class="fa fa-lock" aria-hidden="true"></i> {{ 'Connexion' }}
                    </a>
                </p>
            </div>
        </div>
    </div>
{% endblock %}
